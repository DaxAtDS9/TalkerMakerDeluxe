<UserControl x:Class="TalkerMakerDeluxe.LocationItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="180" MinWidth="140">
	<Grid Background="{DynamicResource GrayBrush3}" Margin="0,0,0,2">
		<Grid.RowDefinitions>
			<RowDefinition Height="25"/>
			<RowDefinition Height="25"/>
		</Grid.RowDefinitions>
		<TextBlock TextTrimming="CharacterEllipsis" Text="Location Name" Name="lblLocName" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" />
		<DockPanel Grid.Row="1" >
			<Label Content="Learned: " HorizontalAlignment="Left" VerticalAlignment="Bottom" />
			<Label Content="false" Name="lblLocLearned" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
			<Label Content="Visited:" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
			<Label Content="false" Name="lblLocVisited" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
			<Label Content="" Name="lblLocDescription" Visibility="Hidden" Width="5"/>
		</DockPanel>



	</Grid>
</UserControl>
